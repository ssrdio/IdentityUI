@using SSRD.IdentityUI.Admin.Areas.IdentityAdmin.Views.Role.Components.RoleMenu
@using SSRD.IdentityUI.Admin.Areas.IdentityAdmin.Models
@model SSRD.IdentityUI.Admin.Areas.IdentityAdmin.Views.Role.Components.RoleMenu.RoleMenuViewComponent.ViewModel

<div class="custom-header">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div>
                @Model.RoleName
            </div>
        </div>
    </div>
    <ul class="body-tabs body-tabs-layout tabs-animated body-tabs-animated nav">
        <li class="nav-item">
            <a role="tab" class="nav-link @(Model.TabSelected == RoleMenuViewComponent.TabSelected.Details ? "active" : "") show" href="@(string.Format(PagePath.ROLE_DETAILS, Model.RoleId))" aria-selected="@(Model.TabSelected == RoleMenuViewComponent.TabSelected.Details ? "true" : "false")">
                <span>Details</span>
            </a>
        </li>
        <li class="nav-item">
            <a role="tab" class="nav-link @(Model.TabSelected == RoleMenuViewComponent.TabSelected.Users ? "active" : "") show" href="@(string.Format(PagePath.ROLE_USERS, Model.RoleId))" aria-selected="@(Model.TabSelected == RoleMenuViewComponent.TabSelected.Users ? "true" : "false")">
                <span>Users</span>
            </a>
        </li>
        @if (Model.RoleType == SSRD.IdentityUI.Core.Data.Enums.Entity.RoleTypes.Group)
        {
            <li class="nav-item">
                <a role="tab" class="nav-link @(Model.TabSelected == RoleMenuViewComponent.TabSelected.Assignments ? "active" : "") show" href="@(string.Format(PagePath.ROLE_ASSIGNMENTS, Model.RoleId))" aria-selected="@(Model.TabSelected == RoleMenuViewComponent.TabSelected.Users ? "true" : "false")">
                    <span>Assignments</span>
                </a>
            </li>
        }
        <li class="nav-item">
            <a role="tab" class="nav-link @(Model.TabSelected == RoleMenuViewComponent.TabSelected.Permissions ? "active" : "") show" href="@(string.Format(PagePath.ROLE_PERMISSIONS, Model.RoleId))" aria-selected="@(Model.TabSelected == RoleMenuViewComponent.TabSelected.Users ? "true" : "false")">
                <span>Permissions</span>
            </a>
        </li>
    </ul>
</div>