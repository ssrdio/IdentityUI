@{
    SidebarSelection.SelectedOption = SidebarOptions.User;
}

@{
    ViewData["Title"] = "Users";
}

@section script {
    <script src="~/identityAdmin/app/invite/invite-user-modal.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            new UserIndex();
        });

        class UserIndex {
            constructor() {
                this.$usersTable = $('#userTable');
                this.initTable();

                this.statusAlert = new StatusAlertComponent('#status-alert-container');

                const inviteUserModal = new InviteUserModal(() => {
                    this.reloadTable();
                    this.statusAlert.showSuccess("User was invited");
                });

                $('#invite-user-button').on('click', () => {
                    inviteUserModal.showModal();
                });
            }

            initTable() {
                $('#userTable').DataTable({
                serverSide: true,
                processing: true,
                columnDefs: [
                    { "width": "100px", "targets": [2] }
                ],
                "targets": 'no-sort',
                "bSort": false,
                "order": [],
                ajax: {
                    url: '@PagePath.USER/GetAll',
                    type: 'GET'
                },
                columns: [
                    {
                        data: "id",
                        title: "Id",
                        render: $.fn.dataTable.render.text()
                    },
                    {
                        data: "userName",
                        title: "Username",
                        render: $.fn.dataTable.render.text()
                    },
                    {
                        data: "email",
                        title: "Email",
                        render: $.fn.dataTable.render.text()
                    },
                    {
                        data: null,
                        title: 'Action',
                        defaultContent: '',
                        render: function (data) {
                            return `<div class="text-center pr-2"><a class="btn btn-primary table-button" href="@(string.Format(PagePath.USER_DETAILS, ""))${data.id}">Details</a> </div>`
                        }
                    }
                ]})
            }

            reloadTable() {
                this.$usersTable
                    .DataTable()
                    .clear()
                    .draw();
            }
        }

    </script>
}

@section modal{
    <div id="modal-container">
        @await Component.InvokeAsync("InviteUserModal")
    </div>
}

<div id="status-alert-container">
    @await Component.InvokeAsync("IdentityStatusAlertJs")
</div>

<div class="row">
    <div class="main-card mb-3 card fullWidthCard table-card">
        <div class="card-body">


            <div class="card-title-space">
                <h5 class="card-title">
                    Users:
                </h5>
                <div id="actions-dropdown" class="dropdown">
                    <button class="btn btn-secondary header-button header-button-dropdown" type="button" data-toggle="dropdown" >
                        Actions
                        <i class="fas fa-sort-down"></i>
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item revoke" href="@PagePath.USER_NEW">Add User</a>
                        <button id="invite-user-button" class="dropdown-item revoke">Invite User</button>
                    </div>
                </div>
            </div>

            <div class="custom_container custom_table">
                <table id="userTable" class="dataTableClass display "></table>
            </div>

        </div>

    </div>
</div>
